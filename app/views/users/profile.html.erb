<h1>users/profile.html.erb</h1>
<h1>プロフィール画面</h1>
<p>
  <% if @user.user_avatar.attached? %>
    <%= image_tag @user.user_avatar, size: '50x50' %>
  <% else %>
    <%= image_tag asset_path('default.png'), size: '50x50' %>
  <% end %>
</p>
<p>ユーザー名: <%= @user.user_name %></p>
<p>ユーザープロフィール: <%= @user.user_profile %></p>
<%= link_to "ユーザー編集", edit_user_registration_path %>
<%= link_to "アカウント画面", users_account_path %>
