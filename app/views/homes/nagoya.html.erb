<h1>名古屋エリア</h1>
<div class="count">
  <p><%= @products.count %>件が見つかりました</p>
</div>
<% @products.each do |product| %>
  <table class="show-table">
    <tr>
      <th>名前</th>
      <td><%=link_to product.name, product_path(product.id) %></td>
    </tr>

    <tr>
      <th>コンテント</th>
      <td><%= product.content %></td>
    </tr>

    <tr>
      <th>金額</th>
      <td><%= product.amount %></td>
    </tr>

   <tr>
     <th>住所</th>
     <td><%= product.address %></td>
   </tr>

   <tr>
     <th>画像</th>
     <td>
       <% if product.image.attached? %>
        <%= image_tag product.image, size: '50x50' %>
       <% else %>
         <%= image_tag asset_path('default.png'), size: '50x50' %>
       <% end %>
     </td>
   </tr>

   <tr>
     <th>詳細</th>
     <td><%=link_to "詳細", product_path(product.id) %></td>
   <tr>
  </table>
<% end %>
