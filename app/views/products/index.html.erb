<h1>Products#index</h1>
<p>Find me in app/views/products/index.html.erb</p>
<% if flash[:success] %>
  <h2 class="success"><%= flash[:success] %></h2>
<% end %>

<h1>product情報一覧</h1>

<p><%= link_to "product新規登録", :new_product %></p>

<div class="count">
  <p>productの結果<%= @products.count %>件が見つかりました</p>
</div>
<br>

<% @products.each do |product| %>
  <p>名前: <%= product.name %></p>
  <p>コンテント: <%= product.content %></p>
  <p>金額: <%= product.amount %>円</p>
  <p>住所: <%= product.address %></p>
  <p>
    <% if product.image.attached? %>
      <%= image_tag product.image, size: '50x50' %>
    <% else %>
      <%= image_tag asset_path('default.png'), size: '50x50' %>
    <% end %>
  </p>
  <p>作成日: <%= product.created_at.to_formatted_s(:datetime_jp) %></p>
  <p>更新日: <%= product.updated_at.to_formatted_s(:datetime_jp) %></p>
  <p><%= link_to "詳細", product %></p>
  <p><%= link_to "編集", [:edit, product] %></p>
  <p><%= link_to 'product削除', product, data: { turbo_method: :delete, turbo_confirm: "productを削除しますか？" } %></p>
  <p>-----------------------------------------------------------------------</p>
<% end %>
