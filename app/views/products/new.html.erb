<h1>Products#new</h1>
<p>Find me in app/views/products/new.html.erb</p>
<h1>product新規作成</h1>
<%= render "shareds/errors", model: @product %>
<%= form_with model: @product do |f| %>
<table>
  <tr>
    <th><%= f.label :name, "名前" %></th>
    <td><%= f.text_field :name %></td>
  </tr>

  <tr>
    <th><%= f.label :content, "コンテント" %></th>
    <td><%= f.text_area :content %></td>
  </tr>

  <tr>
    <th><%= f.label :amount, "金額" %></th>
    <td><%= f.number_field :amount %></td>
  </tr>
 
  <tr>
      <th><%= f.label :address, "住所(東京,函館,名古屋,大阪)で入力" %></th>
      <td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <th><%= f.label :image, "イメージ" %></th>
    <td><%= f.file_field :image %></td>
  </tr>
</table>
<div>
  <ul>
    <li><%= f.submit "登録完了する"%></li>
    <li><%= link_to "product情報一覧に戻る", :products %></li>
  </ul>
</div>
<% end %>
